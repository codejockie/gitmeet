<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="GitMeet.Views.DetailsPage"
             xmlns:helper="clr-namespace:GitMeet.Helpers" Title="{Binding Name, Converter={StaticResource Key=stringToTitle}}" SizeChanged="OnPageSizeChanged">
    <ContentPage.Resources>
        <ResourceDictionary>
            <helper:StringToTitleConverter x:Key="stringToTitle" />

            <Style TargetType="Label">
                <Setter Property="FontSize" Value="Medium" />
                <Setter Property="FontAttributes" Value="Italic" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="10, 20, 10, 20"
                    Android="10, 0, 10, 20" />
    </ContentPage.Padding>

    <Grid x:Name="mainGrid">
        <!-- Initialized for portrait mode. -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0" />
        </Grid.ColumnDefinitions>

        <StackLayout 
            Grid.Row="0" Grid.Column="0">
            <Image Source="{Binding Avatar_Url}" />
            <Grid>
                <!--Grid Styles-->
                <Grid.Resources>
                    <ResourceDictionary>
                        <Style TargetType="Label">
                            <Setter Property="VerticalOptions" Value="Center" />
                            <Setter Property="FontSize" Value="Small" />
                        </Style>

                        <Style TargetType="Image">
                            <Setter Property="BackgroundColor" Value="Accent" />
                        </Style>
                    </ResourceDictionary>
                </Grid.Resources>
                
                <StackLayout Orientation="Horizontal"
                             Grid.Row="0" Grid.Column="0">
                    <Image Source="{helper:ImageResource GitMeet.Images.ic_group_white.png}" />
                    <Label Text="{Binding Followers}" />
                </StackLayout>

                <StackLayout Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
                    <Image Source="{helper:ImageResource GitMeet.Images.ic_group_add_white.png}" />
                    <Label Text="{Binding Following}" />
                </StackLayout>
            </Grid>
        </StackLayout>

        <!--ScrollView StackLayout-->
        <ScrollView x:Name="detailsStack"
                    Grid.Row="1" Grid.Column="0">
            <StackLayout>
                <Label Text="{Binding Name,  StringFormat='Name: {0}', Converter={StaticResource Key=stringToTitle}}" />
                <Label Text="{Binding Login, StringFormat='Username: {0}'}" />
                <Label Text="{Binding Email, StringFormat='Email: {0}'}" />
                <Label Text="{Binding Location, StringFormat='Location: {0}'}" />
                <Label Text="{Binding Company, StringFormat='Company: {0}'}" />
                <StackLayout Orientation="Horizontal">
                    <Label Text="Blog: " />
                    <Label TextColor="Blue"
                           Text="{Binding Blog}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnUrlLabelTapped" />
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>
                <Label Text="{Binding Bio, StringFormat='Bio: {0}'}" />
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
